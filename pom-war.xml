		<repository>
			<id>nexus-byph</id>
			<name>nexus-byph-repo</name>
			<url>http://219.223.5.70/nexus/content/groups/public/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>public</id>
			<name>aliyun nexus</name>
			<url>http://maven.aliyun.com/nexus/content/groups/public/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</pluginRepository>
		<pluginRepository>
			<id>nexus-byph</id>
			<name>nexus-byph-repo</name>
			<url>http://219.223.5.70/nexus/content/groups/public/</url>
